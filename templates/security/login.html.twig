{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <!--form de connexion-->
<div class= "centered-container">
    <div class="form-container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que{{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal sarpanch-semibold">Veuillez vous connecter</h1>
            <label class="pt-mono-regular" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label  class="pt-mono-regular" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" class="pt-mono-regular" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <button class="btn btn-lg btn-primary sarpanch-semibold" type="submit">
                Se connecter
            </button>
            <a href="{{ path('app_register') }}">Vous n'avez pas de compte ? En créer un maintenant</a>
        </form>
    </div>
  </div>
{% endblock %}
